@model ServiceCenter.Client.Mvc.Areas.RPT.Models.RTPEquipmentViewModels
@using ServiceCenter.Model;
@using ServiceCenter.Common;
@using ServiceCenter.Client.Mvc.Areas.RPT.Models;
@using RPTResources = ServiceCenter.Client.Mvc.Resources.RPT;
@using ServiceCenter.Client.Mvc.Resources;
@{
    ViewBag.Title = RPTResources.StringResource.RPTEquipmentOEEQuery_ManagePageTitle;
}
<h2>@ViewBag.Title</h2>
@using (Ajax.BeginForm("Query", "RPTEquipment", null
                , new AjaxOptions()
                 {
                     HttpMethod = "Post",
                     OnBegin = "beginQuery",
                     UpdateTargetId = "list",
                     OnComplete = "completeQuery"
                 }
                , new { @class = "form-horizontal", resource = "form", id = "frmQuery" }))
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <input type="button" value="@StringResource.Query" class="btn btn-primary" id="btnQuery" />
        </div>
        <div class="panel-body">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.EquipmentCode, new { @class = "control-label" })
                </div>
                <div class="col-md-2">
                    @Html.TextBoxFor(m => m.EquipmentCode, string.Empty, new { @class = "form-control" })
                </div>               
                <div class="col-md-2">
                    @Html.LabelFor(m => m.curDate, new { @class = "control-label" })
                </div>
                <div class="col-md-2">
                    @Html.TextBoxFor(m => m.curDate, "{0:yyyy-MM-dd}", new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
}
<div id="list" style="overflow:auto">
    @Html.Partial("_ListPartial", Model)
</div>
@section Scripts {
    @*查询*@
    <script type="text/javascript" language="javascript">
    $(function () {

        $("#curDate").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: "yy-mm-dd"
        });


        $("#frmQuery").keypress(function (args) {
            if (args.keyCode == 13) {
                $("#frmQuery").submit();
            }
        });

        $("#btnQuery").click(function () {
            $("#frmQuery").submit();
        });

        var texts = $("#frmQuery").find(":text:visible:enabled,:checkbox:visible:enabled,textarea:visible:enabled,select:visible:enabled")
                                  .not("[readonly]");

        texts.keypress(function (args) {
            if (args.ctrlKey == false && args.keyCode == 13) {

                var index = texts.index(this) + 1;
                if (index < texts.length) {
                    texts.eq(index).focus().select();
                    return false;
                }
                else {
                    $("#btnQuery").click();
                    return false;
                }
            }
        });
        texts.eq(0).focus().select();
    });

    //刷新列表
    function beginQuery(obj, req) {
        $("#btnQuery").attr("disabled", "disabled");
    }

    function completeQuery() {
        $("#btnQuery").removeAttr("disabled");
    }
    </script>
}
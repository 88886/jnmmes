@model ServiceCenter.Client.Mvc.Areas.FMM.Models.RouteViewModel
@using ServiceCenter.Common;

@Html.ValidationSummary(true)

@* 名称 *@
<div class="form-group">
    @Html.LabelFor(m => m.Name, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        <p class="form-control-static">@Model.Name</p>
        @Html.HiddenFor(m => m.Name)
    </div>
</div>

@* 状态 *@
<div class="form-group">
    @Html.LabelFor(m => m.RouteType, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.DropDownListFor(m => m.RouteType
                              , @Model.GetRouteTypeList()
                              , new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.RouteType)
    </div>
</div>

@* 状态 *@
<div class="form-group">
    @Html.LabelFor(m => m.Status, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.DropDownListFor(m => m.Status
                              , @Model.GetObjectStatusList()
                              , new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Status)
    </div>
</div>

@* 备注 *@
<div class="form-group">
    @Html.LabelFor(m => m.Description, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>
</div>

@model ServiceCenter.Client.Mvc.Areas.FMM.Models.EquipmentStateViewModel
@using ServiceCenter.Common;

@Html.ValidationSummary(true)
<div class="form-group">
    @Html.LabelFor(m => m.Name, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        <p class="form-control-static">@Model.Name</p>
        @Html.HiddenFor(m => m.Name)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Type, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.DropDownListFor(m => m.Type, @Model.GetEquipmentStateTypeList(), new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Type)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Category, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.DropDownListFor(m => m.Category, @Model.GetEquipmentStateCategoryList(), new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Category)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.StateColor, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.TextBoxFor(m => m.StateColor, new { @class = "form-control",@id="txtModifyStateColor",@readonly="readonly" })
        @Html.ValidationMessageFor(m => m.StateColor)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Description, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>
</div>

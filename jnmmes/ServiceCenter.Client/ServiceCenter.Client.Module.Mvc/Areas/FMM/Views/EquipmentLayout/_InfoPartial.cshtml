@model ServiceCenter.Client.Mvc.Areas.FMM.Models.EquipmentLayoutViewModel
@using ServiceCenter.Common;

@Html.ValidationSummary(true)

<div class="form-group">
    @Html.LabelFor(m => m.Name, new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        <p class="form-control-static">@Model.Name</p>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Width, new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        <p class="form-control-static">@Model.Width</p>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Height, new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        <p class="form-control-static">@Model.Height</p>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.BackgroundImage, new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        <p class="form-control-static">
           <img src="@Url.Action("ShowBackgroudImage", "EquipmentLayout", new {@Key=@Model.Name})" width="200"/>
        </p>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Status, new { @class = "col-md-4 control-label" })

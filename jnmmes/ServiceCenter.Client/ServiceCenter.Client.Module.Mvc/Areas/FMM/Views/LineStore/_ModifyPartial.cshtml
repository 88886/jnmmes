@model ServiceCenter.Client.Mvc.Areas.FMM.Models.LineStoreViewModel
@using ServiceCenter.Common;

@Html.ValidationSummary(true)
<div class="form-group">
    @Html.LabelFor(m => m.Name, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        <p class="form-control-static">@Model.Name</p>
        @Html.HiddenFor(m => m.Name)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Type, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.DropDownListFor(m => Model.Type
                                , @Model.GetLineStoreTypeList()
                                , new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Type)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.LocationName, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.DropDownListFor(m => Model.LocationName
                            , @Model.GetLocation()
                            , new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.LocationName)
    </div>
</div>

                                    <span aria-hidden="true">×</span><span class="sr-only">Close</span>
                                </button>
                                <p></p>
                            </div>
                            <div>
                                @Html.Partial("_AddPartial", new CalibrationPlateLineViewModel() { CalibrationPlateID =@ID })
                            </div>

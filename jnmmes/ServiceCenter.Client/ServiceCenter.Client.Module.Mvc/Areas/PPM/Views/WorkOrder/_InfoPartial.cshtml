@model ServiceCenter.Client.Mvc.Areas.PPM.Models.WorkOrderViewModel
@using ServiceCenter.Common;

@Html.ValidationSummary(true)
<div class="form-group">
    @* 工单号 *@
    @Html.LabelFor(m => m.OrderNumber, new { @class = "col-md-1 control-label" })
    <div class="col-md-3">
        <p class="form-control-static">@Model.OrderNumber</p>
        @Html.HiddenFor(m => m.OrderNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.OrderNumber)
    </div>

    @* 产品编号 *@
    @Html.LabelFor(m => m.MaterialCode, new { @class = "col-md-1 control-label" })
    <div class="col-md-3">
        <p class="form-control-static">@Model.MaterialCode</p>
        @Html.HiddenFor(m => m.MaterialCode, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MaterialCode)
    </div>

    @* 生产车间 *@
    @Html.LabelFor(m => m.LocationName, new { @class = "col-md-1 control-label" })
    <div class="col-md-3">        
        @Html.DropDownListFor(m => m.LocationName, @Model.GetLocationNameList(), new { @class = "form-control", @readonly = "readonly" })
        @Html.ValidationMessageFor(m => m.LocationName)
    </div>
</div>
<div class="form-group">
    @* 工单类型 *@
    @Html.LabelFor(m => m.OrderType, new { @class = "col-md-1 control-label" })
    <div class="col-md-3">
        @Html.DropDownListFor(m => m.OrderType, @Model.GetOrderTypeList(), new { @class = "form-control", @readonly = "readonly" })
        @Html.ValidationMessageFor(m => m.OrderType)
    </div>

    @* 工单数量 *@
    @Html.LabelFor(m => m.OrderQuantity, new { @class = "col-md-1 control-label" })
    <div class="col-md-3">
        @Html.TextBoxFor(m => m.OrderQuantity, new { @class = "form-control", @readonly = "readonly" })
        @Html.ValidationMessageFor(m => m.OrderQuantity)
    </div>

    @* 工单状态 *@
    @Html.LabelFor(m => m.OrderState, new { @class = "col-md-1 control-label" })
    <div class="col-md-3">
        @Html.DropDownListFor(m => m.OrderState, @Model.GetOrderStateList(), new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.OrderState)
    </div>     
</div>
<div class="form-group">
    @* 关闭类型 *@
    @Html.LabelFor(m => m.CloseType, new { @class = "col-md-1 control-label" })
    <div class="col-md-3">
        @Html.DropDownListFor(m => m.CloseType, @Model.GetWorkOrderCloseTypeList(), new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CloseType)
    </div>

    @* 计划开工日期 *@
    @Html.LabelFor(m => m.PlanStartTime, new { @class = "col-md-1 control-label" })
    <div class="col-md-3">
        @Html.TextBoxFor(m => m.PlanStartTime, "{0:yyyy-MM-dd}", new { @class = "form-control", @id = "txtAddStartTime", @readonly = "readonly" })
        @Html.ValidationMessageFor(m => m.PlanStartTime)
    </div>

    @* 计划完工日期 *@
    @Html.LabelFor(m => m.PlanFinishTime, new { @class = "col-md-1 control-label" })
    <div class="col-md-3">
        @Html.TextBoxFor(m => m.PlanFinishTime, "{0:yyyy-MM-dd}", new { @class = "form-control", @id = "txtAddFinishTime", @readonly = "readonly" })
        @Html.ValidationMessageFor(m => m.PlanFinishTime)
    </div>
</div>
<div class="form-group">
    @* 描述 *@
    @Html.LabelFor(m => m.Description, new { @class = "col-sm-1 control-label" })
    <div class="col-sm-11">
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @readonly = "readonly" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>
</div>
@model ServiceCenter.Client.Mvc.Areas.PPM.Models.WorkOrderGroupDetailViewModel
@using ServiceCenter.Common;
@Html.ValidationSummary(true)
<div class="form-group">
    @Html.LabelFor(m => m.WorkOrderGroupNo, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.TextBoxFor(m => m.WorkOrderGroupNo, new { Value = @Model.SetWorkOrderGroupNo(), @class = "form-control", style = "text-transform:uppercase;ime-mode:inactive" })
        @Html.ValidationMessageFor(m => m.WorkOrderGroupNo)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.OrderNumber, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.TextBoxFor(m => m.OrderNumber, new {@id = "txtOrderNumber", @class = "form-control",style = "text-transform:uppercase;ime-mode:inactive" })
        @Html.ValidationMessageFor(m => m.OrderNumber)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.ProductCode, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.TextBoxFor(m => m.ProductCode, new { @id = "txtProductCode", @class = "form-control", style = "text-transform:uppercase;ime-mode:inactive", @readonly = "readonly" })
        @Html.ValidationMessageFor(m => m.ProductCode)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Description, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>
</div>




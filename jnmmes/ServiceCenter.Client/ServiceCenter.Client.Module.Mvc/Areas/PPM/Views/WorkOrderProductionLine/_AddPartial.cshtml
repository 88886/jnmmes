@model ServiceCenter.Client.Mvc.Areas.PPM.Models.WorkOrderProductionLineViewModel
<div class="form-group">
    @Html.LabelFor(m => m.OrderNumber, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        <p class="form-control-static">@Model.OrderNumber</p>
        @Html.HiddenFor(m => m.OrderNumber)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.LineCode, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.DropDownListFor(m => Model.LineCode, @Model.GetLineCodeList(), new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.LineCode)
    </div>
</div>
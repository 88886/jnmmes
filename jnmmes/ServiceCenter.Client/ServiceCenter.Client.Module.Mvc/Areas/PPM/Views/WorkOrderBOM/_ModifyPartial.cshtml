    @Html.LabelFor(m => m.ReplaceMaterial, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.TextBoxFor(m => m.ReplaceMaterial, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ReplaceMaterial)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Description, new { @class = "col-md-3 control-label" })

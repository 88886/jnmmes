@model ServiceCenter.Client.Mvc.Areas.PPM.Models.PlanDayViewModel
@using ServiceCenter.MES.Model.PPM;
@using ServiceCenter.Model;
@using ServiceCenter.Common;
@using ServiceCenter.Client.Mvc.Areas.PPM.Models;
@using PPM=ServiceCenter.Client.Mvc.Resources.PPM;
@using ServiceCenter.Client.Mvc.Resources;

@{
    ViewBag.Title = PPM.StringResource.PlanDay_ManagePageTitle;
    PagingConfig cfg = ViewBag.PagingConfig;
}
<h2>@ViewBag.Title</h2>

@using (Ajax.BeginForm("Add", "PlanDay", null
                        , new AjaxOptions()
                        {
                            HttpMethod = "Post",
                            OnSuccess = "completeAdd",
                            OnBegin = "beginAdd"
                        }
                        , new { @class = "form-horizontal", resource = "form"}))
{
    @Html.AntiForgeryToken()
    <div class="panel panel-default">

        <div class="panel-heading">
            @*新增按钮*@
            <a href="javascript:showAddModal()" class="btn btn-primary">@StringResource.Add</a>
        </div>
        <div class="panel-body">
        @using (Ajax.BeginForm("Query", "PlanDay", null
                    , new AjaxOptions()
                    {
                        HttpMethod = "Post",
                        OnBegin="beginQuery",
                        UpdateTargetId = "list"
                    }
                    , new { @class = "form-horizontal", resource = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                @*年度*@
                <div class="col-md-1">
                    @Html.LabelFor(m => m.Year, new { @class = "control-label" })
                </div>
                <div class="col-md-1">
                    @Html.TextBoxFor(m => m.Year, new { @class = "form-control" })
                </div>
                @*月份*@
                <div class="col-md-1">
                    @Html.LabelFor(m => m.Month, new { @class = "control-label" })
                </div>
                <div class="col-md-1">
                    @Html.TextBoxFor(m => m.Month, new { @class = "form-control" })
                </div>
                @*车间*@
                <div class="col-md-1">
                    @Html.LabelFor(m => m.LocationName, new { @class = "control-label" })
                </div>
                <div class="col-md-2">
                    @Html.DropDownListFor(m => m.LocationName, @Model.GetLocationName(), string.Empty, new { @class = "form-control" })
                </div>
                @*查询按钮*@
                <div class="col-md-2">
                    <input type="submit" value="@StringResource.Query" class="btn btn-default" />
                </div>
            </div>
        }
        </div>
        
        <div class="alert fade in hide" resource="alert" id="statusMessage" style="margin:0px">
            <button type="button" class="close" onclick="hideStatusMessage()">
                <span aria-hidden="true">×</span><span class="sr-only">Close</span>
            </button>
            <p></p>
        </div>
        <div id="list">
            @Html.Partial("_ListPartial", new PlanDayViewModel())
        </div>
    </div>
}

@*新增*@
<div id="add" class="modal fade" tabindex="-1" resource="dialog" aria-labelledby="addHeader" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="addHeader">@PPM.StringResource.PlanMonth_AddTitle</h4>
            </div>
            <div class="modal-body" id="addContent" style="margin:0px;padding:5px">
                @using (Ajax.BeginForm("Add", "PlanDay", null
                        , new AjaxOptions()
                        {
                            HttpMethod = "Post",
                            OnSuccess = "completeSave",
                            OnBegin = "beginSave"
                        }
                        , new { @class = "form-horizontal", resource = "form", id = "frmAdd" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <input type="submit" class="btn btn-primary" value="@StringResource.Save" id="btnSave" />
                            <input type="reset" class="btn btn-default" value="@StringResource.Reset" id="btnReset" />
                        </div>
                        <div class="panel-body">
                            <div class="alert fade in hide" resource="alert" id="addStatusMessage">
                                <button type="button" class="close" onclick="hideAddAlert()">
                                    <span aria-hidden="true">×</span><span class="sr-only">Close</span>
                                </button>
                                <p></p>
                            </div>
                            <div>
                                @Html.Partial("_AddPartial", new PlanDayViewModel())
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script type="text/javascript" language="javascript">
        //刷新列表
        function refreshList() {
            if ($("#frmPagingQuery").length > 0) {
                $("#frmPagingQuery").submit();
            }
        }

        //隐藏状态消息
        function hideStatusMessage() {
            $("#statusMessage").addClass("hide");
        }
    </script>

    @*查询*@
    <script type="text/javascript" language="javascript">
        //刷新列表
        function beginQuery() {
            hideStatusMessage();
        }
    </script>

    @*新增*@
    <script type="text/javascript" language="javascript">
        //新增
        $(function () {
            $('#add').on('hide.bs.modal', function (e) {
                $("#btnReset").click();
            });
            $("#add").on('shown.bs.modal', function (e) {
                var texts = $(this).find(":text:visible:enabled,:checkbox:visible:enabled,textarea:visible:enabled,select:visible:enabled");
                texts.eq(0).focus().select();
            });
        })

        function showAddModal() {
            hideAddAlert();
            hideStatusMessage();
            $("#btnAdd").removeAttr("disabled");
            $('#add').modal('show');
        }

        function hideAddAlert() {
            $("#addStatusMessage").addClass("hide");
        }

        function beginSave() {
            $("#btnSave").attr("disabled", "disabled");
        }

        function completeSave(result) {
            $("#btnSave").removeAttr("disabled");
            $("#addStatusMessage").find("p").html(result.Message);
            $("#addStatusMessage").removeClass("hide");
            if (result.Code > 0) {
                $("#addStatusMessage").removeClass("alert-success");
                $("#addStatusMessage").addClass("alert-danger");
            }
            else {
                $("#addStatusMessage").removeClass("alert-danger");
                $("#addStatusMessage").addClass("alert-success");
                refreshList();
            }
        }
    </script>

    @*删除*@
    <script type="text/javascript" language="javascript">
        //删除资源
        function completeDelete(result) {
            $("#statusMessage").find("p").html(result.Message);
            $("#statusMessage").removeClass("hide");
            if (result.Code > 0) {
                $("#statusMessage").removeClass("alert-success");
                $("#statusMessage").addClass("alert-danger");
            }
            else {
                $("#statusMessage").removeClass("alert-danger");
                $("#statusMessage").addClass("alert-success");
                refreshList();
            }
        }
    </script>
}
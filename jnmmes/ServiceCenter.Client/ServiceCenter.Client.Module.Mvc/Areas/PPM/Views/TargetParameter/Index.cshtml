@model ServiceCenter.Client.Mvc.Areas.PPM.Models.TargetParameterQueryViewModel
@using ServiceCenter.MES.Model.PPM;
@using ServiceCenter.Model;
@using ServiceCenter.Common;
@using ServiceCenter.Client.Mvc.Areas.PPM.Models;
@using PPM = ServiceCenter.Client.Mvc.Resources.PPM;
@using ServiceCenter.Client.Mvc.Resources;

@{
    ViewBag.Title = PPM.StringResource.TargetParameter_ManagePageTitle;
    PagingConfig cfg = ViewBag.PagingConfig;

}
<h2>@ViewBag.Title</h2>
<div class="panel panel-default">
    <div class="panel-heading">
        @*新增按钮*@
        <a href="javascript:showAddModal()" class="btn btn-primary">@StringResource.Add</a>
    </div>
    <div class="panel-body">
        @using (Ajax.BeginForm("Query", "TargetParameter", null
            , new AjaxOptions()
            {
                HttpMethod = "Post",
                OnBegin = "beginQuery",
                UpdateTargetId = "list",
                OnSuccess = "completeRefresh"
            }
            , new { @class = "form-horizontal", resource = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                @*年度*@
                <div class="col-md-1">
                    @Html.LabelFor(m => m.qYear, new { @class = "control-label" })
                </div>
                <div class="col-md-1">
                    @Html.DropDownListFor(m => m.qYear, @Model.GetYear(), string.Empty, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.qYear)
                </div>
                @*月份*@
                <div class="col-md-1">
                    @Html.LabelFor(m => m.qMonth, new { @class = "control-label" })
                </div>
                <div class="col-md-1">
                    @Html.DropDownListFor(m => m.qMonth, @Model.GetMonth(), string.Empty, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.qMonth)
                </div>
                @*车间*@
                <div class="col-md-1">
                    @Html.LabelFor(m => m.LocationName, new { @class = "control-label" })
                </div>
                <div class="col-md-2">
                    @Html.DropDownListFor(m => m.LocationName, @Model.GetLocationName(), string.Empty, new { @class = "form-control" })
                </div>
                @*项目*@
                @*<div class="col-md-1">
                    @Html.LabelFor(m => m.ItemCode, new { @class = "control-label" })
                </div>
                <div class="col-md-2">
                    @Html.DropDownListFor(m => m.ItemCode, @Model.GetShiftName(), string.Empty, new { @class = "form-control" })
                </div>*@                
                @*查询按钮*@
                <div class="col-md-2">
                    <input type="submit" value="@StringResource.Query" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
    <div class="alert fade in hide" resource="alert" id="statusMessage" style="margin:0px">
        <button type="button" class="close" onclick="hideStatusMessage()">
            <span aria-hidden="true">×</span><span class="sr-only">Close</span>
        </button>
        <p></p>
    </div>
    <div id="list">
        @Html.Partial("_ListPartial", new TargetParameterViewModel())
    </div>
</div>

@*新增日计划*@
<div id="add" class="modal fade" tabindex="-1" resource="dialog" aria-labelledby="addHeader" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="addHeader">@PPM.StringResource.TargetParameter_AddTitle</h4>
            </div>
            <div class="modal-body" id="addContent" style="margin:0px;padding:5px">
                @using (Ajax.BeginForm("Add", "TargetParameter", null
                        , new AjaxOptions()
                        {
                            HttpMethod = "Post",
                            OnSuccess = "completeSave",
                            OnBegin = "beginSave"
                        }
                        , new { @class = "form-horizontal", resource = "form", id = "frmAdd" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <input type="submit" class="btn btn-primary" value="@StringResource.Save" id="btnSave" />
                            <input type="reset" class="btn btn-default" value="@StringResource.Reset" id="btnReset" />
                        </div>
                        <div class="panel-body">
                            <div class="alert fade in hide" resource="alert" id="addStatusMessage">
                                <button type="button" class="close" onclick="hideAddAlert()">
                                    <span aria-hidden="true">×</span><span class="sr-only">Close</span>
                                </button>
                                <p></p>
                            </div>
                            <div>
                                @Html.Partial("_AddPartial", new TargetParameterViewModel())
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


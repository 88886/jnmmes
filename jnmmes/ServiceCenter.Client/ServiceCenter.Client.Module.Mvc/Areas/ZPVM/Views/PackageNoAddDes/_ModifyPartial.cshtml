@model ServiceCenter.Client.Mvc.Areas.ZPVM.Models.PackageNoAddDesViewModel
@using ServiceCenter.Common;
@Html.ValidationSummary(true)
<div class="form-group">
    @Html.LabelFor(m => m.PackageNo, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        <p class="form-control-static">@Model.PackageNo</p>
        @Html.HiddenFor(m => m.PackageNo)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Action, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        <p class="form-control-static">@Model.Action</p>
        @Html.HiddenFor(m => m.Action)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Description, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>
</div>
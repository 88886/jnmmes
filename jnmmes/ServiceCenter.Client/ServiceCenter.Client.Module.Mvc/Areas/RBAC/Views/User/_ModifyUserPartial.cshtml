@model ServiceCenter.Client.Mvc.Areas.RBAC.Models.UserViewModel
@using ServiceCenter.Client.Mvc.Areas.RBAC.Models
@Html.ValidationSummary(true)
<!-- Nav tabs -->
<ul class="nav nav-tabs" role="tablist">
    <li class="active"><a href="#base" role="tab" data-toggle="tab" onfocus="this.blur()">基本信息</a></li>
    <li><a href="#role" role="tab" data-toggle="tab" onfocus="this.blur()">角色</a></li>
    <li><a href="#resource" role="tab" data-toggle="tab" onfocus="this.blur()">资源</a></li>
</ul>
<!-- Tab panes -->
<div class="tab-content">
    <div class="tab-pane active" id="base" style="padding-top:10px">
        <div class="form-group">
            @Html.LabelFor(m => m.LoginName, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.LoginName, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @value = Model == null ? string.Empty : Model.Password })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.OfficePhone, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.OfficePhone, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.OfficePhone)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.MobilePhone, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.MobilePhone, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.MobilePhone)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.IsActive, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.IsActive)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.IsLocked, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.CheckBoxFor(m => m.IsLocked, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.IsLocked)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Description, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Description)
            </div>
        </div>
    </div>
    <div class="tab-pane" style="padding-top:10px" id="role">
        @Html.Partial("_SetUserRolePartial", new SetUserRoleViewModel() { LoginName = Model.LoginName })
    </div>
    <div class="tab-pane" style="padding-top:10px" id="resource">
        @Html.Partial("_SetUserResourcePartial", new SetUserResourceViewModel() { LoginName = Model.LoginName })
    </div>
</div>

@model ServiceCenter.Client.Mvc.Areas.FMM.Models.ClientConfigViewModel
@using ServiceCenter.Common;

@Html.ValidationSummary(true)
<div class="form-group">
    @Html.LabelFor(m => m.Name, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        <p class="form-control-static">@Model.Name</p>
        @Html.HiddenFor(m => m.Name)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.ClientType, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.DropDownListFor(m => m.ClientType, @Model.GetClientTypeList(), new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ClientType)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.LocationName, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.DropDownListFor(m => Model.LocationName
                            , @Model.GetLocation()
                            , new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.LocationName)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.IPAddress, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.TextBoxFor(m => m.IPAddress, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.IPAddress)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Description, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>
</div>

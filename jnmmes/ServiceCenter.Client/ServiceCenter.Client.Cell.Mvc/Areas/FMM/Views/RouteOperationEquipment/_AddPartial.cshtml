@model ServiceCenter.Client.Mvc.Areas.FMM.Models.RouteOperationEquipmentViewModel
<div class="form-group">
    @Html.LabelFor(m => m.RouteOperationName, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        <p class="form-control-static">@Model.RouteOperationName</p>
        @Html.HiddenFor(m => m.RouteOperationName)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.EquipmentCode, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.DropDownListFor(m => Model.EquipmentCode, @Model.GetEquipmentCodeList(), new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.EquipmentCode)
    </div>
</div>
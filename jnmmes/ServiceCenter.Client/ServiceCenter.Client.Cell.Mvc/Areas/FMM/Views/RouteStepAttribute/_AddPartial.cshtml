@model ServiceCenter.Client.Mvc.Areas.FMM.Models.RouteStepAttributeViewModel
<div class="form-group">
    @Html.LabelFor(m => m.RouteName, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        <p class="form-control-static">@Model.RouteName</p>
        @Html.HiddenFor(m => m.RouteName)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.RouteStepName, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        <p class="form-control-static">@Model.RouteStepName</p>
        @Html.HiddenFor(m => m.RouteStepName)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.AttributeName, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.DropDownListFor(m => Model.AttributeName, @Model.GetAttributeName(), new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.AttributeName)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Value, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.TextBoxFor(m => m.Value, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Value)
    </div>
</div>
@model ServiceCenter.Client.Mvc.Areas.BaseData.Models.BaseAttributeViewModel

<div class="form-group">
    @Html.LabelFor(m => m.CategoryName, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" , @readonly="readonly"})
        @Html.ValidationMessageFor(m => m.CategoryName)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Order, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.TextBoxFor(m => m.Order, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Order)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.AttributeName, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.TextBoxFor(m => m.AttributeName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.AttributeName)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.DataType, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.DropDownListFor(m => m.DataType, @Model.GetDataTypeList(), new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DataType)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.IsPrimaryKey, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.CheckBoxFor(m => m.IsPrimaryKey, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.IsPrimaryKey)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Description, new { @class = "col-md-3 control-label" })
    <div class="col-md-9">
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>
</div>
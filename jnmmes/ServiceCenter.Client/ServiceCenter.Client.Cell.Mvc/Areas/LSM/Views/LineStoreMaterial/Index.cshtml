@model ServiceCenter.Client.Mvc.Areas.LSM.Models.LineStoreMaterialQueryViewModel
@using ServiceCenter.MES.Model.LSM;
@using ServiceCenter.Model;
@using ServiceCenter.Common;
@using ServiceCenter.Client.Mvc.Areas.LSM.Models;
@using LSMRsources = ServiceCenter.Client.Mvc.Resources.LSM;
@using ServiceCenter.Client.Mvc.Resources;

@{
    ViewBag.Title = LSMRsources.StringResource.LineStoreMaterial_ManagePageTitle;
}
<h2>@ViewBag.Title</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        &nbsp;
    </div>
    <div class="panel-body">
        @using (Ajax.BeginForm("Query", "LineStoreMaterial", null
            , new AjaxOptions()
            {
                HttpMethod = "Post",
                OnBegin = "beginQuery",
                UpdateTargetId = "list"
            }
            , new { @class = "form-horizontal", resource = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-1">
                    @Html.LabelFor(m => m.LineStoreName, new { @class = "control-label" })
                </div>
                <div class="col-md-2">
                    @Html.TextBoxFor(m => m.LineStoreName, new { @class = "form-control" })
                </div>
                <div class="col-md-1">
                    @Html.LabelFor(m => m.MaterialCode, new { @class = "control-label" })
                </div>
                <div class="col-md-2">
                    @Html.TextBoxFor(m => m.MaterialCode, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    <input type="submit" value="@StringResource.Query" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
    <div id="list">
        @Html.Partial("_ListPartial", new LineStoreMaterialViewModel())
    </div>
</div>

@section Scripts {
@*查询*@
<script type="text/javascript" language="javascript">
    //刷新列表
    function beginQuery() {

    }
</script>
}